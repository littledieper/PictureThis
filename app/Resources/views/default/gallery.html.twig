{% extends 'base.html.twig' %}

{% block body %}
<div class='container'>
	<div class='row'>
		{% if images %}
    		{% for image in images %}
    		<div class="col-xs-4 col-sm-3 col-md-3 col-lg-3">
    			<a href="{{ "image/#{image.id}" }}" class="thumbnail"> <img
    				src="{{ vich_uploader_asset(image, 'image', 'AppBundle\\Entity\\Image') }}"
    				style="height:200px">
    			</a>
    		</div>
    		{% endfor %}
		{% else %}
    		<h2>Sorry! We couldn't find any images.</h2>
    	{% endif %}
	</div>
	<!-- end row -->
	<div class='row'>
		<p><a class="btn btn-primary btn-lg" href="/gallery">Get more images</a></p>
	</div>
</div>
{% endblock %}