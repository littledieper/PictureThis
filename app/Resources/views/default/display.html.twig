{% extends 'base.html.twig' %}

{% block body %}
<div class='container-fluid' style='padding: 1%;'>
	<div class='row'>
		<div class='col-xs-12 col-sm-9 col-md-9 col-lg-9'>
			<img
				src="{{ vich_uploader_asset(image, 'image', 'AppBundle\\Entity\\Image') }}"
				alt={{ image.fileName }} class='img-responsive center-block'>
		</div><!-- end image column -->
		<div class='col-xs-12 col-sm-3 col-md-3 col-lg-3'>
			<div class='panel panel-default'>
				<div class='panel-heading'>Properties</div>
				<ul class='list-group'>
					<li class="list-group-item">Size: {{ image.fileSize }}</li>
					<li class="list-group-item">Height: {{ image.length }}</li>
					<li class="list-group-item">Width: {{ image.width }}</li>
					<li class="list-group-item">Date uploaded: {{ image.uploadDate|date("m/d/Y") }}</li>
				</ul> <!-- end unordered list -->
			</div> <!-- end panel -->
			<div class='panel panel-default'>
				<div class='panel-heading'>Tags</div>
    				<ul class='list-group'>
    					{% for tag in image.tags  %}
    					<li class="list-group-item" style="padding: 5px;">{{ tag.tag }}</li>
    					{% endfor %}
    				</ul> <!-- end unordered list -->
			</div><!-- end panel column -->
		</div><!-- end row -->
	</div><!-- end container fluid-->
{% endblock %}